<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="688.0" prefWidth="865.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ininprotec.GraficaController">
   <center>
      <BorderPane>
         <center>
            <VBox alignment="CENTER">
               <children>
                  <BarChart fx:id="grafica" prefHeight="402.0" prefWidth="734.0">
                    <xAxis>
                      <CategoryAxis label="Nombre Servicio" side="BOTTOM" fx:id="xNombre" />
                    </xAxis>
                    <yAxis>
                      <NumberAxis fx:id="yNumeros" label="Beneficios" side="TOP" tickLabelGap="5.0" upperBound="100000.0" />
                    </yAxis>
                  </BarChart>
                  <Separator prefHeight="0.0" prefWidth="866.0" />
                  <FlowPane fx:id="textBuscador" hgap="290.0" onKeyReleased="#filtro" prefHeight="50.0" prefWidth="866.0">
                     <children>
                        <Label fx:id="añadir" text="Añadir Servicio" />
                        <TextField />
                     </children>
                     <VBox.margin>
                        <Insets left="20.0" top="10.0" />
                     </VBox.margin>
                  </FlowPane>
                  <TableView fx:id="tabla" prefHeight="280.0" prefWidth="845.0">
                    <columns>
                      <TableColumn fx:id="cNombre" prefWidth="75.0" text="Nombre" />
                      <TableColumn fx:id="cBeneficio" prefWidth="75.0" text="Beneficio" />
                    </columns>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" />
                     </VBox.margin>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </center>
         <top>
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="734.0" BorderPane.alignment="CENTER">
               <children>
                  <Label text="GRAFICA SERVICIOS" />
               </children>
            </HBox>
         </top>
      </BorderPane>
   </center>
</BorderPane>
