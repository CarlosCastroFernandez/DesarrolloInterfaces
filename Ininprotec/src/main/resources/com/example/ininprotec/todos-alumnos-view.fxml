                        <DatePicker fx:id="dateHasta" />
                        <HBox alignment="CENTER" spacing="20.0">
                           <children>
                              <Button fx:id="botonBuscar" mnemonicParsing="false" onAction="#buscar" text="Buscar" />
                              <Button fx:id="botonQuitar" mnemonicParsing="false" onAction="#quitar" text="Limpiar" />
                           </children>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </VBox>
               </items>
            </SplitPane>
         </right>
      </BorderPane>
