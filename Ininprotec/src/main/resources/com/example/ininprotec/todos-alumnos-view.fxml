                           </children>
                        </FlowPane>
                        <FlowPane hgap="30.0">
                           <children>
                              <Label text="Idioma" />
                              <ComboBox fx:id="comboIdioma" maxWidth="200.0" prefHeight="26.0" prefWidth="102.0" />
