<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="693.0" prefWidth="1012.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ininprotec.LogInController">
   <center>
      <BorderPane prefHeight="582.0" prefWidth="144.0">
         <center>
            <VBox alignment="CENTER" maxHeight="421.0" maxWidth="400.0" prefHeight="421.0" prefWidth="290.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <ImageView fx:id="imageEscudo" fitHeight="86.0" fitWidth="103.0" pickOnBounds="true" preserveRatio="true" />
                  <Label text="Correo Electrónico" />
                  <TextField fx:id="textCorreo" maxWidth="200.0" />
                  <Label text="Contraseña" />
                  <PasswordField fx:id="textContraseña" maxWidth="200.0" />
                  <CheckBox fx:id="checkContraseña" mnemonicParsing="false" onAction="#recuerdoContraseña" text="Recordar Contraseña">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </CheckBox>
                  <Label fx:id="labelOlvido" onMouseClicked="#olvidaContraseña" text="¿Olvidaste su contraseña?" />
                  <Button fx:id="botonIncio" mnemonicParsing="false" onAction="#inicioSesion" text="Iniciar Sesión" />
                  <ProgressIndicator fx:id="indicator" prefHeight="53.0" prefWidth="92.0" />
               </children>
               <BorderPane.margin>
                  <Insets bottom="100.0" />
               </BorderPane.margin>
            </VBox>
         </center>
      </BorderPane>
   </center>
   <left>
      <VBox prefHeight="694.0" prefWidth="722.0" styleClass="fondo" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
