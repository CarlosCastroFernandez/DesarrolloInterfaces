<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="549.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.proyectogestionpedidos.VentanaUsuario">
   <top>
      <VBox alignment="CENTER" prefHeight="57.0" prefWidth="549.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="labelBienvenido" text="Bienvenido:" />
            <Label text="Lista De Tus Pedidos" />
            <VBox spacing="10.0">
               <children>
                  <Label text="Busqueda Por Pedidos:" />
                  <ComboBox fx:id="comboBox" prefWidth="150.0" promptText="Seleccion" />
               </children>
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </VBox>
         </children>
      </VBox>
   </top>
   <center>
      <HBox alignment="CENTER" prefHeight="343.0" prefWidth="538.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="listaPedidos" prefHeight="393.0" prefWidth="354.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ListView>
            <Button fx:id="botonVer" mnemonicParsing="false" onAction="#verPedido" prefHeight="25.0" prefWidth="149.0" text="Ver Pedido" />
            <Button fx:id="botonListar" mnemonicParsing="false" onAction="#listarAllPedidos" prefHeight="25.0" prefWidth="160.0" text="Listar Pedidos">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </center>
</BorderPane>
