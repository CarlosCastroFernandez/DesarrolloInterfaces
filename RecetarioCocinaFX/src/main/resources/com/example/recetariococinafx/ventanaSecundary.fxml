<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="343.0" prefWidth="369.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.recetariococinafx.VentanaSecundaryController">
   <center>
      <VBox alignment="CENTER" prefHeight="249.0" prefWidth="249.0" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" alignment="CENTER" prefHeight="40.0" prefWidth="368.0" text="Detalle de Receta" textAlignment="CENTER">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="textNombre" maxWidth="-Infinity" prefHeight="25.0" prefWidth="200.0" />
            <FlowPane hgap="20.0" prefHeight="200.0" prefWidth="200.0">
               <children>
                  <ComboBox fx:id="comboDificultad" prefHeight="25.0" prefWidth="135.0" />
                  <ComboBox fx:id="comboTipo" prefHeight="25.0" prefWidth="119.0" />
                  <Spinner fx:id="spinner" prefHeight="25.0" prefWidth="65.0" />
                  <Button fx:id="botonActualizar" mnemonicParsing="false" onAction="#actualizar" text="Actualizar">
                     <FlowPane.margin>
                        <Insets top="30.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button fx:id="botonVolver" mnemonicParsing="false" onAction="#volver" text="Volver">
                     <FlowPane.margin>
                        <Insets top="30.0" />
                     </FlowPane.margin>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </VBox>
   </center>
</BorderPane>
